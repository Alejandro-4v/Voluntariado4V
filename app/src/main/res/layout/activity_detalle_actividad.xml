<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surfaceColor"
    android:padding="16dp"
    tools:context=".DetalleActividadActivity">

    <ImageView
        android:id="@+id/ivDetalleImagen"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@color/colorSecondary"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetalleTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:text="Nombre Actividad - Entidad"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDetalleImagen" />

    <LinearLayout
        android:id="@+id/layoutDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalleTitulo">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:text="Fecha y hora"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvDetalleFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15/10/2025\n10:00"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:text="Lugar"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvDetalleLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Polideportivo\nMunicipal"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:text="Plazas"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColorSecondary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/tvDetallePlazas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10 / 10"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLabelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Descripción de la actividad"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDatos"/>

    <TextView
        android:id="@+id/tvDetalleDescripcion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        tools:text="Aquí va la descripción detallada de la actividad..."
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btnValorar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelDesc"/>

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Cerrar"
        android:backgroundTint="@color/surfaceColor"
        android:textColor="@color/colorPrimary"
        android:stateListAnimator="@null"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnValorar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:text="Valorar"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/textColorWhite"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>